            <a href="{{ url('logout') }}">
                <i class="ec-headerNav__itemIcon fas fa-arrow-right-from-bracket fa-fw"></i>
                <span class="ec-headerNav__itemLink">{{ 'ログアウト'|trans }}</span>
            </a>
        </div>
    {% else %}
        <div class="ec-headerNav__item">
            <a href="{{ url('entry') }}">
